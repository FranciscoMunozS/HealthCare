<div id="login_health">
  <h2>Iniciar sesión</h2>
  <hr>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, label: 'Correo electronico', placeholder: 'ejemplo@gmail.com', required: false, autofocus: true %>
      <%= f.input :password, label: 'Contraseña', placeholder: '*******', required: false %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Iniciar sesión", class: 'btn btn-primary btn-lg' %>
    </div>
  <% end %>
</div>
